<%= form_for @company do |f| %>
      <div class="form-group col-md-12">
        <label for="formGroupExampleInput"><%= f.label :name, "Company Name" %>:</label>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group col-md-12">
        <div class="form-row">
          <div class="form-group col-md-5">
            <label for="inputCity"><%= f.label :city %>:</label>
            <%= f.text_field :city, class: "form-control" %>
          </div>
          <div class="form-group col-md-3">
            <label for="inputState"><%= f.label :state %>:</label>
            <%= f.text_field :state, class: "form-control" %>
          </div>
          <div class="form-group col-md-4">
            <label for="inputState"><%= f.label :founded_date %>:</label>
            <div class="input-group">
              <%= f.text_field :founded_date, class: "form-control datepicker" %>
              <div class="input-group-prepend">
                <span class="input-group-text"><i class="fa fa-calendar"></i></span>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="form-group col-md-12">
        <label for="exampleFormControlTextarea1"><%= f.label :description %>:</label>
        <%= f.text_area :description, class: "form-control", rows: "3" %>
      </div>
      <% if params[:action] == 'edit' %>
        <div class="form-group col-md-12">
          <div class="card my-4">
            <h5 class="card-header">Categories</h5>
            <div class="card-body">
              <div class="row">
                <div class="col-lg-12">
                  <label for="inputState"><%= f.label :category_list, 'Category Tags (Comma separated)' %>:</label>
                      <%= f.text_field :category_list, class: "form-control" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      <div class="form-group col-md-12" align="right">
        <div class="col-sm-12">
          <%= f.submit class: "btn btn-secondary" %>
        </div>
      </div>
    <% end %>