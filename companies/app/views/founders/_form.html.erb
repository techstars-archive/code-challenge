<!-- Form to add more founders -->
<button type="button"
        class="collapsed btn btn-success"
        data-toggle="collapse"
        data-target="#add-founder-form"
        aria-expanded="false">
  <span class="glyphicon glyphicon-plus-sign"></span>
  Add Founder
</button>
<div class="embedded-form collapse" id="add-founder-form">
  <%= form_with(model: [ @company, @company.founders.build ], local: true) do |form| %>
    <div class="form-group">
      <%= form.label :full_name %>
      <%= form.text_field :full_name, class: 'form-control', placeholder: 'Jane Smith' %>
    </div>
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: 'form-control', placeholder: 'Founder & CEO' %>
    </div>
    <div class="form-group">
      <%= form.submit class: 'btn btn-primary', value: 'Add Founder' %>
    </div>
  <% end %>
</div>
