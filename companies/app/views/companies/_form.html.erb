<%= form_with model: @company, local: true do |form| %>
  <% if @company.errors.any? %>
    <div id="errors">
      <h2>Whoops!</h2>
      <ul>
        <% @company.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control', placeholder: 'Google' %>
  </div>

  <div class="form-group">
    <%= form.label :location %>
    <%= form.text_field :location, class: 'form-control', placeholder: 'Boulder, CO' %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control', rows: '10' %>
  </div>

  <div class="form-group">
    <%= form.label :date_founded %>
    <%= form.text_field :date_founded, class: 'form-control', placeholder: '12/31/1969' %>
  </div>

  <div class="form-group">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
