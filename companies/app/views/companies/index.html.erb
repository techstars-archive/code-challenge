<ol class="breadcrumb">
  <li class="active">
    Company Listing
  </li>
</ol>

<% @companies.each do |company| %>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h2>
      <%= company.name %> <small><%= company.location %></small>
    </h2>
    <div class="company-description">
      <%= simple_format(company.description.split("\n")[0..3].join(" ")) %>
    </div>
    <p>
      <br>
      <a href="<%= company_path(company) %>" class="btn btn-primary">Read More &raquo;</a>
      <br><br>
    </p>
  </div>
</div>
<% end %>

<% if @companies.length < 1 %>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h1 align="center">
      There's nothing here!
    </h1>
    <p class="lead" align="center">
      <%= link_to 'Add a company', new_company_path %> to get started.
    </p>
  </div>
</div>
<% end %>
