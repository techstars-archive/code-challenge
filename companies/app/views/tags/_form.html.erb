<%= form_with(model: [ @company, @company.tags.build ], local: true) do |form| %>
  <div class="form-group">
    <%= form.text_field :text, class: 'form-control', placeholder: 'Add tag...' %>
  </div>
  <div class="form-group">
    <%= form.submit class: 'btn btn-primary', value: 'Add Tag' %>
  </div>
<% end %>
